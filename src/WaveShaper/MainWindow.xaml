<Window x:Class="WaveShaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveShaper"
        xmlns:controls="clr-namespace:WaveShaper.Controls"
        xmlns:utils="clr-namespace:WaveShaper.Utilities"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="WaveShaper" Height="436.039" Width="634.489"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <!--<utils:WpfEnumDisplayConverter x:Key="EnumConverter"/>-->
        <ObjectDataProvider x:Key="DpProcessingTypes" MethodName="AllValuesForDdl" ObjectType="utils:EnumUtil">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:ProcessingType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="DpOperator" MethodName="AllValuesForDdl" ObjectType="utils:EnumUtil">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:Operator" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <controls:Player Margin="10,10,10,10" VerticalAlignment="Top" x:Name="Player"/>
        <GroupBox Header="Waveshaper" Margin="10,64,10,10">
            <Grid>
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top">
                    <ComboBox x:Name="DdlProcessingType" 
                          ItemsSource="{Binding Source={StaticResource DpProcessingTypes}}"  DisplayMemberPath="Text" SelectedValuePath="Value"
                          SelectedIndex="0" IsSynchronizedWithCurrentItem="True"
                          SelectionChanged="DdlProcessingType_OnSelectionChanged" Width="150" />
                    <Button x:Name="button" Content="Apply" HorizontalAlignment="Left" Width="60" Margin="10,0,0,0" 
                            Click="Button_OnClick"/>
                </StackPanel>
                <TabControl x:Name="TabControl" Margin="10,37,10,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                            SelectedIndex="{Binding SelectedIndex, ElementName=DdlProcessingType}">
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Style>
                    </TabControl.ItemContainerStyle>
                    <TabItem Header="TabItem">
                        <Grid/>
                    </TabItem>
                    <TabItem Header="TabItem">
                        <Grid >
                            <DataGrid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                      Margin="0,0,0,0" Height="Auto" Width="Auto"
                                      CanUserAddRows="True" CanUserDeleteRows="True" AutoGenerateColumns="False"
                                      ItemsSource="{Binding PiecewiseFunctionRows, Mode=TwoWay}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding From, StringFormat='{}{0:0.0###}'}" MinWidth="50">
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style>
                                                <Setter Property="TextBox.TextAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style>
                                                <Setter Property="TextBlock.TextAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridComboBoxColumn ItemsSource="{Binding Source={StaticResource DpOperator}}"
                                                            SelectedValueBinding="{Binding FromOperator}" DisplayMemberPath="Text" SelectedValuePath="Value"
                                                            MinWidth="50">
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style>
                                                <Setter Property="ComboBox.MinWidth" Value="45" />
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style>
                                                <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                    </DataGridComboBoxColumn>
                                    <DataGridTextColumn Binding="{Binding VariableDisplay}" IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style>
                                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridComboBoxColumn ItemsSource="{Binding Source={StaticResource DpOperator}}"
                                                            SelectedValueBinding="{Binding ToOperator}" DisplayMemberPath="Text" SelectedValuePath="Value"
                                                            MinWidth="50">
                                        <DataGridComboBoxColumn.EditingElementStyle>
                                            <Style>
                                                <Setter Property="ComboBox.MinWidth" Value="45" />
                                            </Style>
                                        </DataGridComboBoxColumn.EditingElementStyle>
                                        <DataGridComboBoxColumn.ElementStyle>
                                            <Style>
                                                <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridComboBoxColumn.ElementStyle>
                                    </DataGridComboBoxColumn>
                                    <DataGridTextColumn Binding="{Binding To, StringFormat='{}{0:0.0###}'}" MinWidth="50">
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style>
                                                <Setter Property="TextBox.TextAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style>
                                                <Setter Property="TextBlock.TextAlignment" Value="Right" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="f(x)" Binding="{Binding Expression}" Width="200*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>

            </Grid>
        </GroupBox>
    </Grid>
</Window>



